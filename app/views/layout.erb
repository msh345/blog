  <script src="/js/application.js"></script>

  <title></title>
</head>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/new">New Post</a></li><br>
      <% if current_user %>
        <li><a href="/user/<%= current_user.id %>">My Posts</li></a>
        <li><a href="/logout">Logout</a></li>
        <% else %>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">Sign Up</a></li>
      <% end %>
    </ul>
  </nav>
