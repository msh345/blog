<h1>The Totally Awesome Blog Site</h1>
  
<h3>All Posts</h3>

<ul>
  <% @posts.each do |post| %>
    <li><a href="/post/<%= post.id %>"><%= post.title %></a></li>
  <% end %>
</ul>


<h3>Posts by User Name</h3>

<ul>
	<% @users.each do |user| %>
		<li><a href="/user/<%= user.id %>/posts"><%= user.user_name %></a></li>
	<% end %>
</ul>